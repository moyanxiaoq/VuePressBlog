
#header
  padding 0 32px
  padding-top 10px

.header-wrapper .title a
  text-transform none
  color $accentColor
  font-size 24px

#mobile-header .mobile-header-title .mobile-home-link
  text-transform none
  color $accentColor

#vuepress-theme-blog__post-layout .vuepress-blog-theme-content
  padding 0
  box-shadow none

  .post-title
    margin-top 0
    font-size 26px

.content-wrapper
  padding-top 90px
  padding-bottom 20px
  min-height: calc(100vh - 80px - 90px);


.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  background-color #f0f4f8
  .title
    font-weight bold

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right